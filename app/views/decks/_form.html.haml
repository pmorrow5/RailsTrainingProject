= simple_form_for @deck do |f|
  - if @deck.errors.any?
    #error_explanation
      %h2= "#{pluralize(@deck.errors.count, "error")} prohibited this deck from being saved:"
      %ul
        - @deck.errors.full_messages.each do |msg|
          %li= "Message: " + msg

  .field
    = f.text_field :title, placeholder: "Title" 
  .field
    = f.text_field :description, placeholder: "Description"
  .actions
    = link_to '', root_path, class: "btn btn-warning glyphicon glyphicon-arrow-left"
    = f.button :button, class: 'btn btn-success' do 
      %span.glyphicon.glyphicon-ok
