%h1 Edit Card

= simple_form_for :card, url: deck_card_path(@deck,@card), action: "update", method: :put do |f|
  - if @card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card.errors.count, "error")} prohibited this deck from being saved:"
      %ul
        - @card.errors.full_messages.each do |msg|
          %li= "Message: " + msg
          %li= @card.deck_id 
  %div
    = f.input :prompt, placeholder: "Term", input_html:{class: "form-control"}
    = f.input :answer, placeholder: "Definition", input_html:{ class: "form-control"}
  = link_to '', deck_path(@deck), class: "btn btn-warning glyphicon glyphicon-arrow-left"

  = link_to "", deck_card_path(@deck,@card), data: { confirm: 'Are you sure?', method: :Delete}, class: "btn btn-danger glyphicon glyphicon-remove"

  = f.button :button, class: 'btn btn-success' do 
    %span.glyphicon.glyphicon-ok